{
  "name": "Stream Clipper",
  "version": "0.0.1",
  "description": "Saving timestamps in YT videos",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "dist/contentScript.bundle.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png",
        "dashboard.html",
        "static/dataTables.bootstrap5.min.css",
        "static/buttons.dataTables.min.css",
        "static/responsive.dataTables.min.css",
        "static/all.min.css",
        "static/bootstrap.min.css",
        "static/bootstrap.bundle.min.js"
      ],
      "matches": [
        "https://*.youtube.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "My YT Bookmarks",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}